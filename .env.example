# Configuration du serveur
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Base de données
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Logs
# 0 = ERROR only, 1 = WARN, 2 = INFO, 3 = DEBUG
LOG_LEVEL=2

# CORS
CORS_ORIGIN="http://localhost:5173,http://127.0.0.1:5173,https://frontend-lively-star-6238.fly.dev"

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW="1 minute"

# Cache (optionnel - valeurs par défaut utilisées si non définies)
CACHE_TTL_LOBBY=30000
CACHE_TTL_USER=60000

# WebSocket timeouts (en millisecondes)
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=10000
PLAYER_DISCONNECT_TIMEOUT=60000
LOBBY_CLEANUP_DELAY=300000

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000

# Sécurité
TRUST_PROXY=true
MAX_PARAM_LENGTH=200
