{
  "name": "mapquiz-backend",
  "version": "1.0.0",
  "description": "Backend optimis√© pour MapQuiz",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "./scripts/test-setup.sh",
    "test:watch": "./scripts/test-setup.sh --watch",
    "test:coverage": "./scripts/test-setup.sh --coverage",
    "test:unit": "./scripts/test-setup.sh --unit",
    "test:integration": "./scripts/test-setup.sh --integration",
    "test:e2e": "./scripts/test-setup.sh --e2e",
    "test:performance": "./scripts/test-setup.sh --performance",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "./scripts/test-setup.sh --debug",
    "test:docker:start": "docker-compose -f docker-compose.test.yml up -d",
    "test:docker:stop": "docker-compose -f docker-compose.test.yml down",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build:check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^6.13.0",
    "better-auth": "^1.3.4",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^30.0.5",
    "prisma": "^6.13.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
